platform :ios, '12.0'

def testing_pods
    pod 'Quick', '2.2.0'
    pod 'Nimble', '8.0.5'
end

target 'Converter' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  # Pods for Converter

  target 'ConverterTests' do
    inherit! :search_paths
    # Pods for testing
	testing_pods
  end

end

target 'Data' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  # Pods for Data

  target 'DataTests' do
    inherit! :search_paths
    # Pods for testing
	testing_pods
  end

end

